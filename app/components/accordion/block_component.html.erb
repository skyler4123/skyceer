<div data-controller="accordion--block-component" class="<%= @klass %>">
  <div class="<%= @header_class %>">
    <div class="<%= @label_class %>">
      <%= before if before %>
      <%= @label %>
      <%= after if after %>
    </div>
    <%= icon? ? icon : render(IconComponent.new(name: 'chevron-down')) %>
  </div>
  <div class="<%= @body_class %>">
    <div>
      <%= body? ? body : "Empty body!" %>
    </div>
  </div>
</div>
