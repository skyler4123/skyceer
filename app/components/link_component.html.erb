<%= tag.div(class: @klass, data: { controller: "link-component", link_component_label_value: @label, link_component_url_value: @url, link_component_link_class_value: @link_class}) do %>
  <% if prepends %>
    <% prepends.each do |prepend| %>
      <%= prepend %>
    <% end %>
  <% end %>
  <template></template>
  <% if appends %>
    <% appends.each do |append| %>
      <%= append %>
    <% end %>
  <% end %>
<% end %>