<%= tag.div(class: 'hidden ', data: { controller: "link-component", link_component_label_value: @label, link_component_klass_value: @klass, link_component_url_value: @url, link_component_link_class_value: @link_class}) do %>
  
  <% if prepends && !content %>
    <% prepends.each do |prepend| %>
      <%= prepend %>
    <% end %>
  <% end %>

  <template>
    <% if content %>
      <%= content %>
    <% elsif body %>
      <%= body %>
    <% else %>
      <%= @label %>
    <% end %>
  </template>

  <% if appends && !content %>
    <% appends.each do |append| %>
      <%= append %>
    <% end %>
  <% end %>

<% end %>