<%= tag.div(class: @klass, id: @id, data: { controller: @controller }) do %>
  <%= tag.button(class: @button_class) do %>
    <%= link_to(@url, class: @link_class) do %>
      <% if content && !copy_icon %>
        <%= content %>
      <% else %>
        <%= before if before? %>
        <%= @label %>
        <%= after if after? %>
      <% end %>
    <% end %>
  <% end %>
  <% if copy_icon %>
    <%= render(Button::CopyLinkBeforeComponent.new) do %>
      <%= copy_icon %>
    <% end %>
  <% elsif @has_copy_icon %>

    <%= render(Button::CopyLinkBeforeComponent.new) %>
  <% end %> 
  <%= indicator if indicator %>
<% end %>