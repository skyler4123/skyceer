<%= tag.div(id: @id, class: "hidden", data: {
  controller: @controller,
  action: @controller_action,
  carousel_component_is_open_value: @is_open,
  carousel_component_event_value: @event,

  carousel_component_klass_value: @klass,
  carousel_component_klass_default_value: @klass_default,
  carousel_component_content_class_value: @content_class,
  carousel_component_content_class_default_value: @content_class_default,
  **@rest_data_attributes
}) do %>
  <div data-carousel-component-target="content">
    <% if content? %>
      <%= content %>
    <% else %>
      <div>Empty Content!!!</div>
    <% end %>  
  </div>

<% end %>
