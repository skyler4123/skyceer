<%= tag.div(id: @id, class: 'hidden', data: {
  controller: @controller,
  action: @controller_action,
  img_component_is_open_value: @is_open,
  img_component_event_value: @event,

  img_component_type_value: @type,
  img_component_url_value: @url,
  img_component_alt_value: @alt,
  
  img_component_klass_value: @klass,
  img_component_img_class_value: @img_class,
  img_component_klass_default_value: @klass_default,
  img_component_img_class_default_value: @img_class_default,
  **@rest_data_attributes
}) do %>
  <template data-img-component-target="template"></template>
<% end %>