<%= tag.div(class: 'hidden ', id: @id, data: {
  controller: @controller,
  action: @controller_action,
  icon_component_event_value: @event,

  icon_component_name_value: @name,
  icon_component_type_value: @type,
  icon_component_svg_html_value: @svg_html,

  icon_component_klass_value: @klass,
  icon_component_svg_class_value: @svg_class,
  icon_component_klass_default_value: @klass_default,
  icon_component_svg_class_default_value: @svg_class_default,
  **@rest_data_attributes
} ) do %>
  <template data-icon-component-target="template"></template>
<% end %>