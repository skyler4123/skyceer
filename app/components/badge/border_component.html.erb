  <div data-controller="badge--border-component" class="bg-blue-100 text-blue-800 text-xs font-medium rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 flex flex-row justify-center items-center gap-x-1 px-2 py-0.5">
    <%= before if before? %>
    <%= content ? content : @label %>
    <%= after if after? %>
  </div>
