  <div data-controller="badge--default-component" class="bg-blue-100 text-blue-800 text-xs font-medium rounded dark:bg-blue-900 dark:text-blue-300 flex flex-row justify-center items-center gap-x-1 px-2 py-0.5">
    <%= before if before? %>
    <%= content ? content : @label %>
    <%= after if after? %>
  </div>
