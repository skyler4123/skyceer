<% case @color %>
<% when :blue %>
  <span data-controller="badge--default-component" class="bg-blue-100 text-blue-800 text-xs font-medium rounded dark:bg-blue-900 dark:text-blue-300 flex flex-row justify-center gap-x-1">
    <%= @label %>
  </span>
<% when :dark %>
<span data-controller="badge--default-component" class="bg-gray-100 text-gray-800 text-xs font-medium rounded dark:bg-gray-700 dark:text-gray-300 flex flex-row justify-center gap-x-1">
  <%= @label %>
</span>
<% when :red %>
<span data-controller="badge--default-component" class="bg-red-100 text-red-800 text-xs font-medium rounded dark:bg-red-900 dark:text-red-300 flex flex-row justify-center gap-x-1">
  <%= @label %>
</span>
<% when :green %>
<span data-controller="badge--default-component" class="bg-green-100 text-green-800 text-xs font-medium rounded dark:bg-green-900 dark:text-green-300 flex flex-row justify-center gap-x-1">
  <%= @label %>
</span>
<% when :yellow %>
<span data-controller="badge--default-component" class="bg-yellow-100 text-yellow-800 text-xs font-medium rounded dark:bg-yellow-900 dark:text-yellow-300 flex flex-row justify-center gap-x-1">
  <%= @label %>
</span>
<% when :indigo %>
<span data-controller="badge--default-component" class="bg-indigo-100 text-indigo-800 text-xs font-medium rounded dark:bg-indigo-900 dark:text-indigo-300 flex flex-row justify-center gap-x-1">
  <%= @label %>
</span>
<% when :purple %>
<span data-controller="badge--default-component" class="bg-purple-100 text-purple-800 text-xs font-medium rounded dark:bg-purple-900 dark:text-purple-300 flex flex-row justify-center gap-x-1">
  <%= @label %>
</span>
<% when :pink %>
<span data-controller="badge--default-component" class="bg-pink-100 text-pink-800 text-xs font-medium rounded dark:bg-pink-900 dark:text-pink-300 flex flex-row justify-center gap-x-1">
  <%= @label %>
</span>
<% end %>