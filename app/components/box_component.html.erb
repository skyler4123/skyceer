<%= content_tag(@tag, id: @id, class: "hidden", data: {
  controller: @controller,
  action: @controller_action,
  box_component_is_open_value: @is_open,
  box_component_event_value: @event,

  box_component_style_value: @style,
  box_component_position_value: @position,

  box_component_klass_value: @klass,
  box_component_klass_default_value: @klass_default,
  box_component_content_class_value: @content_class,
  box_component_content_class_default_value: @content_class_default,
  **@rest_data_attributes
}) do %>
  <%= content_tag(@tag, data: { box_component_target: "content" }) do %>
    <%= content ? content : "Box with empty content!" %>
  <% end %>
<% end %>