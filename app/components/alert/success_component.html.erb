<% @klass ||= "flex flex-row justify-between p-2 my-2 text-green-800 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" %>

<div data-controller="alert--success-component" class="<%= @klass %>" role="alert">
  <% if content %>
    <%= content %>
  <% else %>
    <div><%= @label %></div>
  <% end %>
  <%= render(Button::ExitComponent.new) if @closable %>
</div>