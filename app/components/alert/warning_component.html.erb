<% @klass ||= "flex flex-row justify-between p-2 my-2 text-yellow-800 border border-yellow-300 rounded-lg bg-yellow-50 dark:bg-gray-800 dark:text-yellow-300" %>

<div data-controller="alert--warning-component" class="<%= @klass %>" role="alert">
  <% if content %>
    <%= content %>
  <% else %>
    <div><%= @label %></div>
  <% end %>
  <%= render(Button::ExitComponent.new) if @closable %>
</div>