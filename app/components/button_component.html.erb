<%= tag.div(class: 'hidden ', data: { controller: "button-component", button_component_label_value: @label, button_component_klass_value: @klass, button_component_url_value: @url, button_component_button_class_value: @button_class, button_component_link_class_value: @link_class}) do %>
  
  <% if prepends %>
    <% prepends.each do |prepend| %>
      <%= prepend %>
    <% end %>
  <% end %>

  <template>
    <% if content %>
      <%= content %>
    <% elsif body %>
      <%= body %>
    <% else %>
      <%= @label %>
    <% end %>
  </template>

  <% if appends %>
    <% appends.each do |append| %>
      <%= append %>
    <% end %>
  <% end %>

<% end %>