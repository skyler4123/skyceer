<%= tag.div(id: @id, class: 'hidden ', data: {
  controller: @controller,
  action: @controller_action,
  button_component_event_value: @event,

  button_component_label_value: @label,
  button_component_url_value: @url,

  button_component_klass_value: @klass,
  button_component_content_class_value: @content_class,
  button_component_button_class_value: @button_class,
  button_component_link_class_value: @link_class,
  button_component_klass_default_value: @klass_default,
  button_component_content_class_default_value: @content_class_default,
  button_component_button_class_default_value: @button_class_default,
  button_component_link_class_default_value: @link_class_default,
  **@rest_data_attributes
  }) do %>
  <%= tag.div(class: @content_class, data: { button_component_target: "content", action: @action }) do %>
    <% if prepends? %>
      <% prepends.each do |prepend| %>
        <%= prepend %>
      <% end %>
    <% end %>

    <template data-button-component-target="template">
      <% if content %>
        <%= content %>
      <% elsif body? %>
        <%= body %>
      <% else %>
        <%= @label %>
      <% end %>
    </template>

    <% if appends? %>
      <% appends.each do |append| %>
        <%= append %>
      <% end %>
    <% end %>
  <% end %>

  <% if hiddens? %>
    <%= tag.div(data: { button_component_target: "hidden" }) do %>
      <% hiddens.each do |hidden| %>
        <%= hidden %>
      <% end %>
    <% end %>
  <% end %>
<% end %>