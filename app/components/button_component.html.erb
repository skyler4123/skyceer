

<%= tag.div(id: @id, data: { controller: @controller, component: { klass: @klass, button_class: @button_class, link_class: @link_class } }) do %>
  <button class="<%= @button_class %>">
    <% if @url %>
      <a class="<%= @link_class %>" href="<%= @url %>">
        <% if content %>
          <%= content %>
        <% else %>
          <%= before if before? %>
          <%= @label %>
          <%= after if after? %>
        <% end %>
      </a>
    <% else %>
      <% if content %>
        <%= content %>
      <% else %>
        <%= before if before? %>
        <%= @label %>
        <%= after if after? %>
      <% end %>
    <% end %>
  </button>
  <%= indicator if indicator %>
  <% if effects %>
    <% effects.each do |effect| %>
      <%= effect %>
    <% end %>
  <% end %>
<% end %>