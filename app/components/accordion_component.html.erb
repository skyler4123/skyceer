<%= tag.div(class: 'hidden ', data: {
  controller: @controller,
  action: @controller_action,
  accordion_component_event_value: @event,

  accordion_component_accordion_direction_value: @accordion_direction,

  accordion_component_label_value: @label,
  accordion_component_position_value: @position,
  accordion_component_klass_value: @klass,
  accordion_component_content_class_value: @content_class,
  accordion_component_grid_class_value: @grid_class,
  accordion_component_klass_default_value: @klass_default,
  accordion_component_content_class_default_value: @content_class_default,
  accordion_component_grid_class_default_value: @grid_class_default,
  **@rest_data_attributes
}) do %>
  <div data-accordion-component-target="content">
    <div data-accordion-component-target="grid">
      <% if content? %>
        <%= content %>
      <% else %>
        "Empty Content!"
      <% end %>
    </div>
  </div>
<% end %>