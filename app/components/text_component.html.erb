<%= tag.div(class: 'hidden ', data: {
  controller: @controller,
  action: @controller_action,
  text_component_is_open_value: @is_open,

  text_component_label_value: @label,
  text_component_language_name_value: @language_name,
  text_component_language_key_value: @language_key,
  
  text_component_klass_value: @klass,
  text_component_text_class_value: @text_class,
  text_component_klass_default_value: @klass_default,
  text_component_text_class_default_value: @text_class_default,
  **@rest_data_attributes
}) do %>
  <%if editor? %>
    <div data-text-component-target="editor">
      <%= editor %>
    </div>
  <% end %>
  <div data-text-component-target="text"></div>
<% end %>
