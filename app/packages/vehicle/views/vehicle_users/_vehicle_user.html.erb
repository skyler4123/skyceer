<div id="<%= dom_id vehicle_user %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= vehicle_user.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this car user", vehicle_user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this car user", edit_vehicle_user_path(vehicle_user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
