<div id="<%= dom_id vehicle_store %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= vehicle_store.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Vehicle user:</strong>
    <%= vehicle_store.vehicle_user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Coordinates:</strong>
    <%= vehicle_store.coordinates %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this car store", vehicle_store, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this car store", edit_vehicle_store_path(vehicle_store), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
