<div id="<%= dom_id calendar_group %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= calendar_group.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= calendar_group.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Color:</strong>
    <%= calendar_group.color %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Border color:</strong>
    <%= calendar_group.border_color %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Background color:</strong>
    <%= calendar_group.background_color %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Drag background color:</strong>
    <%= calendar_group.drag_background_color %>
  </p>

</div>
