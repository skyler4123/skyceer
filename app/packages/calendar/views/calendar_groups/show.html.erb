<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @calendar_group %>

    <%= link_to "Edit this calendar group", edit_calendar_group_path(@calendar_group), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to calendar groups", calendar_groups_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this calendar group", @calendar_group, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
