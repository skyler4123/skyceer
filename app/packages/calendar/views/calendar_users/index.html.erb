<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Calendar users" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Calendar users</h1>
    <%= link_to "New calendar user", new_calendar_user_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="calendar_users" class="min-w-full">
    <% @calendar_users.each do |calendar_user| %>
      <%= render calendar_user %>
      <p>
        <%= link_to "Show this calendar user", calendar_user, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
