<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <%= render @calendar_category %>

    <%= link_to "Edit this calendar category", edit_calendar_category_path(@calendar_category), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to calendar categories", calendar_categories_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this calendar category", @calendar_category, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
