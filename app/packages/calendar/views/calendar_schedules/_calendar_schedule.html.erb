<div id="<%= dom_id calendar_schedule %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Calendar user:</strong>
    <%= calendar_schedule.calendar_user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this calendar schedule", calendar_schedule, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this calendar schedule", edit_calendar_schedule_path(calendar_schedule), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
