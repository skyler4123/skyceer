<div class="w-full">
  <% content_for :title, "Calendar category appointments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Calendar category appointments</h1>
    <%= link_to "New calendar category appointment", new_calendar_category_appointment_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="calendar_category_appointments" class="min-w-full">
    <% @calendar_category_appointments.each do |calendar_category_appointment| %>
      <%= render calendar_category_appointment %>
      <p>
        <%= link_to "Show this calendar category appointment", calendar_category_appointment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
