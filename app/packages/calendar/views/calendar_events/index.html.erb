<div class="w-full">
  <% if notice.present? %>
    <p class="w-full text-center py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Calendar events</h1>
    <%= link_to "New calendar event", new_calendar_event_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="calendar_events" class="min-w-full">
    <%= render @calendar_events %>
  </div>
</div>
