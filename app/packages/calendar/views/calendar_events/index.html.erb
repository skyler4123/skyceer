<div class="w-full">

  <% content_for :title, "Calendar events" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Calendar events</h1>
    <%= link_to "New calendar event", new_calendar_event_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="calendar_events" class="min-w-full">
    <% @calendar_events.each do |calendar_event| %>
      <%= render calendar_event %>
      <p>
        <%= link_to "Show this calendar event", calendar_event, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
