<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Calendar event appointments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Calendar event appointments</h1>
    <%= link_to "New calendar event appointment", new_calendar_event_appointment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="calendar_event_appointments" class="min-w-full">
    <% @calendar_event_appointments.each do |calendar_event_appointment| %>
      <%= render calendar_event_appointment %>
      <p>
        <%= link_to "Show this calendar event appointment", calendar_event_appointment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
