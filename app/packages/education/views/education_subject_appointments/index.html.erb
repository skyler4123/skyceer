<div class="w-full">

  <% content_for :title, "Education subject appointments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education subject appointments</h1>
    <%= link_to "New education subject appointment", new_education_subject_appointment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_subject_appointments" class="min-w-full">
    <% @education_subject_appointments.each do |education_subject_appointment| %>
      <%= render education_subject_appointment %>
      <p>
        <%= link_to "Show this education subject appointment", education_subject_appointment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
