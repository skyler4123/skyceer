<%
=begin%>
 <div class="mx-auto w-4/5 mt-10">
  <h1 class="font-bold text-2xl">Editing teacher</h1>

  <%= form_with(model: @education_teacher, class: "contents", data: { controller: "education--select-school"}) do |form| %>
    <% if @education_teacher.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@education_teacher.errors.count, "error") %> prohibited this education_teacher from being saved:</h2>

        <ul>
          <% @education_teacher.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :name, class: "required" %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :email, class: "required" %>
      <%= form.text_field :email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :education_school_id, "School", class: "required" %>
      <%= form.select :education_school_id, options_for_select(@education_schools.pluck(:name, :id), @education_teacher.education_schools.pluck(:id)), { include_blank: true, required: true, multiple: true }, { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", data: {controller: "education--choices", "#{stimulus_controller}-target": "schoolSelect"} } %>
    </div>

    <div class="my-5">
      <%= form.label :education_category_id, "Category" %>
      <%= form.select :education_category_id, options_for_select(@education_categories.pluck(:name, :id), @selected_categories.pluck(:id)), { include_blank: true, multiple: true }, { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", data: { controller: "education--choices" } } %>
    </div>

    <div class="inline">
      <%= form.submit "Save", class: "rounded-lg py-3 px-5 bg-slate-800 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>
</div> 
<%
=end%>
