<%= form_with(model: education_parent, class: "contents") do |form| %>
  <% if education_parent.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(education_parent.errors.count, "error") %> prohibited this education_parent from being saved:</h2>

      <ul class="list-disc ml-6">
        <% education_parent.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": education_parent.errors[:user_id].none?, "border-red-400 focus:outline-red-600": education_parent.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": education_parent.errors[:name].none?, "border-red-400 focus:outline-red-600": education_parent.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": education_parent.errors[:email].none?, "border-red-400 focus:outline-red-600": education_parent.errors[:email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :discarded_at %>
    <%= form.datetime_field :discarded_at, class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": education_parent.errors[:discarded_at].none?, "border-red-400 focus:outline-red-600": education_parent.errors[:discarded_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :education_school_id %>
    <%= form.text_field :education_school_id, options_for_select(@education_categories.pluck(:name, :id), []), class: ["block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": education_parent.errors[:education_school_id].none?, "border-red-400 focus:outline-red-600": education_parent.errors[:education_school_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
