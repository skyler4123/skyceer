<div class="mx-auto w-4/5 mt-10">
  <h1 class="font-bold text-2xl">New class</h1>

  <%= form_with(model: @education_class, class: "contents") do |form| %>
    <div class="my-5">
      <%= form.label :education_school_id, "School", class: "required" %>
      <%= form.select :education_school_id, options_for_select(@education_schools.pluck(:name, :id), []), { include_blank: true, required: true }, { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", data: { controller: "education--choices" } } %>
    </div>

    <div class="my-5">
      <%= form.label :education_course_id, "Course", class: "required" %>
      <%= form.select :education_course_id, options_for_select(@education_courses.pluck(:name, :id), []), { include_blank: true, required: true }, { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", data: { controller: "education--choices" } } %>
    </div>

    <div class="my-5">
      <%= form.label :name, class: "required" %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :education_category_id, "Category" %>
      <%= form.select :education_category_id, options_for_select(@education_categories.pluck(:name, :id), []), { include_blank: true, multiple: true }, { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", data: { controller: "education--choices" } } %>
    </div>

    <div class="inline">
      <%= form.submit "Save", class: "rounded-lg py-3 px-5 bg-slate-800 text-white inline-block font-medium cursor-pointer" %>
    </div>

  <% end %>

</div>
