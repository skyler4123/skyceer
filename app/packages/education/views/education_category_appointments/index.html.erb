<div class="w-full">

  <% content_for :title, "Education category appointments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education category appointments</h1>
    <%= link_to "New education category appointment", new_education_category_appointment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_category_appointments" class="min-w-full">
    <% @education_category_appointments.each do |education_category_appointment| %>
      <%= render education_category_appointment %>
      <p>
        <%= link_to "Show this education category appointment", education_category_appointment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
