<div id="<%= dom_id education_room %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Education school:</strong>
    <%= education_room.education_school_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= education_room.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this education room", education_room, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this education room", edit_education_room_path(education_room), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
