<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New education teacher</h1>

  <%
=begin%>
 <%= render "form", education_teacher: @education_teacher %> 
<%
=end%>
  <%= form_with(model: [@education_school, @education_teacher], class: "contents") do |form| %>
    <% if @education_teacher.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@education_teacher.errors.count, "error") %> prohibited this education_teacher from being saved:</h2>

        <ul>
          <% @education_teacher.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :email %>
      <%= form.text_field :email, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <%
=begin%>
 <div class="my-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div> 
<%
=end%>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-slate-800 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to "Back to education teachers", education_teachers_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
