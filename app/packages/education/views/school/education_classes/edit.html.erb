<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing education class</h1>

  <%= form_with(model: @education_class, class: "contents", data: { controller: "education--select-category" }) do |form| %>

    <div class="my-5">
      <%= form.label :education_school_id %>
      <%= form.select :education_school_id, @education_schools.pluck(:name, :id), { include_blank: true }, { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", data: {"education--select-category-target": "educationSchool"} } %>
    </div>

    <div class="my-5">
      <%= form.label :education_course_id %>
      <%= form.text_field :education_course_id, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :discarded_at %>
      <%= form.datetime_field :discarded_at, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :education_category_id %>
      <%= form.select :education_category_id, [], {}, { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", data: {"education--select-category-target": "educationCategory"} } %>
    </div>

    <div class="my-5">
      <%= form.label :education_exam_id %>
      <%= form.select :education_exam_id, @education_exams.pluck(:name, :id), { include_blank: true,  :multiple => true }, { class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" } %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to "Show this education class", @education_class, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  <%= link_to "Back to education classes", education_classes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
