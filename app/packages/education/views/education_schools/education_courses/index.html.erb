<div class="w-full">

  <% content_for :title, "Education courses" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education courses</h1>
    <%= link_to "New education course", new_education_school_education_course_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_courses" class="min-w-full">
    <% @education_courses.each do |education_course| %>
      <%= render education_course %>
      <p>
        <%= link_to "Show this education course", education_course, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
<div style="display: none;" data-<%= view_controller(__FILE__) %>-target="contentData">
  <%=
    { education_classes: EducationClass.all,
      education_shifts: @education_shifts.select(:id, :title, :end, :start, :education_class_id).map { |shift| shift.attributes.merge(calendarId: shift.education_class_id) }
    }.to_json
  %>
</div>