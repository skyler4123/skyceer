<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Education subjects" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education subjects</h1>
    <%= link_to "New education subject", new_education_subject_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_subjects" class="min-w-full">
    <% @education_subjects.each do |education_subject| %>
      <%= render education_subject %>
      <p>
        <%= link_to "Show this education subject", education_subject, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
<div class="hidden" data-<%= view_controller(__FILE__) %>-target="contentData">
  <%= @education_subjects.to_json %>
</div>