<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    
    <div id="<%= dom_id @education_class %>">
      <p class="my-5">
        <strong class="block font-medium mb-1">Education school:</strong>
        <%= @education_class.education_school_id %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Name:</strong>
        <%= @education_class.name %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Category:</strong>
        <%= @education_class.category %>
      </p>

      <div class="my-5">
        <strong class="block font-medium mb-1">Students:</strong>
        <% @education_students.each do |education_student| %>
          <div><%= education_student.name %></div>
        <% end %>
      </div>

      <div class="my-5">
        <strong class="block font-medium mb-1">Teachers:</strong>
        <% @education_teachers.each do |education_teacher| %>
          <div><%= education_teacher.name %></div>
        <% end %>
      </div>
    </div>

    <%= link_to "Edit this education class", edit_education_school_education_class_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to education classes", education_classes_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this education class", @education_class, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
