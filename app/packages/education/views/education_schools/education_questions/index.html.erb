<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Education questions" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education questions</h1>
    <%= link_to "New education question", new_education_question_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_questions" class="min-w-full">
    <% @education_questions.each do |education_question| %>
      <%= render education_question %>
      <p>
        <%= link_to "Show this education question", education_question, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
<div class="hidden" data-<%= view_controller(__FILE__) %>-target="contentData">
  <%= @education_questions.to_json %>
</div>