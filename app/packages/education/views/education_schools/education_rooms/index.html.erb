<div class="w-full">
  <% content_for :title, "Education rooms" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education rooms</h1>
    <%= link_to "New education room", new_education_school_education_room_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_rooms" class="min-w-full">
    <% @education_rooms.each do |education_room| %>
      <%= render education_room %>
      <p>
        <%= link_to "Show this education room", education_room, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
<div style="display: none;" data-<%= view_controller(__FILE__) %>-target="contentData">
  <%= @education_rooms.to_json %>
</div>