<div class="w-full">
  <% if notice.present? %>
    <p class="w-full text-center py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Education rooms" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education rooms</h1>
    <%= link_to "New education room", new_education_room_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_rooms" class="min-w-full">
    <% @education_rooms.each do |education_room| %>
      <%= render education_room %>
      <p>
        <%= link_to "Show this education room", education_room, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
