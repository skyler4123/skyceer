<div class="w-full">
  <% content_for :title, "Education students" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education students</h1>
    <%= link_to "New education student", new_education_student_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <form data-controller="education--filter" data-<%= view_controller(__FILE__) %>-target="filter"></form>

  <div id="education_students" class="min-w-full"></div>
  <div
    data-controller="education--pagination"
    data-<%= view_controller(__FILE__) %>-target="pagination"
  >
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
<%= content_data(@education_students).html_safe %>