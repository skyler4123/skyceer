<div class="w-full">
  <% if notice.present? %>
    <p class="w-full text-center py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Education students" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education students</h1>
    <%= link_to "New education student", new_education_student_path[@education_school], class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_students" class="min-w-full">
    <% @education_students.each do |education_student| %>
      <%= render education_student %>
      <p>
        <%= link_to "Show this education student", education_student, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
