<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Education class appointments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education class appointments</h1>
    <%= link_to "New education class appointment", new_education_class_appointment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_class_appointments" class="min-w-full">
    <% @education_class_appointments.each do |education_class_appointment| %>
      <%= render education_class_appointment %>
      <p>
        <%= link_to "Show this education class appointment", education_class_appointment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
