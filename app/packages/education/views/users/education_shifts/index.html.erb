<div class="w-full">

  <% content_for :title, "Education shifts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Education shifts</h1>
    <%= link_to "New education shift", new_education_shift_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="education_shifts" class="min-w-full" data-<%= view_controller(__FILE__) %>-target="index">
    <% @education_shifts.each do |education_shift| %>
      <%= render education_shift %>
      <p>
        <%= link_to "Show this education shift", education_shift, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>  
</div>
<div style="display: none;" data-<%= view_controller(__FILE__) %>-target="contentData">
  <%=
    { education_classes: EducationClass.all,
      education_shifts: @education_shifts.select(:id, :title, :end, :start, :education_class_id).map { |shift| shift.attributes.merge(calendarId: shift.education_class_id) }
    }.to_json
  %>
</div>
