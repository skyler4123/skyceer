<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <%= render @payment_order %>

    <%= link_to "Edit this payment order", edit_payment_order_path(@payment_order), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to payment orders", payment_orders_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this payment order", @payment_order, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
