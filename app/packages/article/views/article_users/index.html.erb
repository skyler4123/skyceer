<div class="w-full">
  <% content_for :title, "Article users" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Article users</h1>
    <%= link_to "New article user", new_article_user_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="article_users" class="min-w-full">
    <% @article_users.each do |article_user| %>
      <%= render article_user %>
      <p>
        <%= link_to "Show this article user", article_user, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
