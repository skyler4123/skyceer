<div class="w-full">
  <% content_for :title, "Article posts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Article posts</h1>
    <%= link_to "New article post", new_article_post_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="article_posts" class="min-w-full">
    <% @article_posts.each do |article_post| %>
      <%= render article_post %>
      <p>
        <%= link_to "Show this article post", article_post, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
