<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <div class="flex justify-center">
        <p class="w-full text-center py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      </div>
    <% end %>

    <div id="<%= dom_id @article_post %>">
      <p class="my-5">
        <strong class="block font-medium mb-1">User:</strong>
        <%= @article_post.user.username %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Title:</strong>
        <%= @article_post.title %>
      </p>

      <p class="my-5">
        <strong class="block font-medium mb-1">Content:</strong>
        <div class="flex flex-col gap-2">
          <%= @article_post.content_as_html.html_safe %>
        </div>
      </p>

    </div>

    <%= link_to "Edit this article post", edit_article_post_path(@article_post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to article posts", article_posts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this article post", @article_post, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
