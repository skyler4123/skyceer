<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @article_comment %>

    <%= link_to "Edit this article comment", edit_article_comment_path(@article_comment), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to article comments", article_comments_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this article comment", @article_comment, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
