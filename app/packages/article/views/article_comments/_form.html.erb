<%= form_with(model: article_comment, class: "contents") do |form| %>
  <% if article_comment.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(article_comment.errors.count, "error") %> prohibited this article_comment from being saved:</h2>

      <ul>
        <% article_comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
