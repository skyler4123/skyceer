<div class="w-full">
  <% content_for :title, "Report categories" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Report categories</h1>
    <%= link_to "New report category", new_report_category_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="report_categories" class="min-w-full">
    <% @report_categories.each do |report_category| %>
      <%= render report_category %>
      <p>
        <%= link_to "Show this report category", report_category, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
