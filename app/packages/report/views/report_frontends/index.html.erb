<div class="w-full">
  <% content_for :title, "Report frontends" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Report frontends</h1>
    <%= link_to "New report frontend", new_report_frontend_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="report_frontends" class="min-w-full">
    <% @report_frontends.each do |report_frontend| %>
      <%= render report_frontend %>
      <p>
        <%= link_to "Show this report frontend", report_frontend, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
