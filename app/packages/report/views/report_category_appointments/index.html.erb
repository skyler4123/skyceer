<div class="w-full">
  <% content_for :title, "Report category appointments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Report category appointments</h1>
    <%= link_to "New report category appointment", new_report_category_appointment_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="report_category_appointments" class="min-w-full">
    <% @report_category_appointments.each do |report_category_appointment| %>
      <%= render report_category_appointment %>
      <p>
        <%= link_to "Show this report category appointment", report_category_appointment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
