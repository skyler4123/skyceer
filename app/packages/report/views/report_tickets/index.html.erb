<div class="w-full">
  <% content_for :title, "Report tickets" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Report tickets</h1>
    <%= link_to "New report ticket", new_report_ticket_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="report_tickets" class="min-w-full">
    <% @report_tickets.each do |report_ticket| %>
      <%= render report_ticket %>
      <p>
        <%= link_to "Show this report ticket", report_ticket, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
