<div id="<%= dom_id blogger %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nickname:</strong>
    <%= blogger.nickname %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= blogger.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this blogger", blogger, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this blogger', edit_blogger_path(blogger), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
