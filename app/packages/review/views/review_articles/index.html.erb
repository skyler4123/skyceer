<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Review articles" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Review articles</h1>
    <%= link_to "New review article", new_review_article_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="review_articles" class="min-w-full">
    <% @review_articles.each do |review_article| %>
      <%= render review_article %>
      <p>
        <%= link_to "Show this review article", review_article, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
