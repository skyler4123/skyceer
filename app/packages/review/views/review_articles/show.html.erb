<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <div id="<%= dom_id @review_article %>">
      <p class="my-5">
        <strong class="block font-medium mb-1">Title:</strong>
        <%= @review_article.title %>
      </p>

      <div class="my-5">
        <strong class="block font-medium mb-1">content:</strong>
        <div id="content">
          <%= editorjs_to_html(@review_article.content) %>
        </div>
      </div>
    </div>

    <div id="review_comments" class="min-w-full">
      <% @review_comments.each do |review_comment| %>
        <div id="<%= dom_id review_comment %>">
          <p class="my-5">
            <strong class="block font-medium mb-1">Review content::</strong>
            <%= review_comment.content %>
          </p>
        </div>
          <p>
            <%= link_to "Show this review comment", review_comment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
          </p>
      <% end %>
    </div>

    <%= link_to "Edit this review article", edit_review_article_path(@review_article), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to review articles", review_articles_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this review article", @review_article, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
