<div class="w-full">
  <% content_for :title, "Payment categories" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Payment categories</h1>
    <%= link_to "New payment category", new_payment_category_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="payment_categories" class="min-w-full">
    <% @payment_categories.each do |payment_category| %>
      <%= render payment_category %>
      <p>
        <%= link_to "Show this payment category", payment_category, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
