<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <%= render @payment_category %>

    <%= link_to "Edit this payment category", edit_payment_category_path(@payment_category), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to payment categories", payment_categories_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this payment category", @payment_category, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
