<div class="w-full">
  <% content_for :title, "Payment item appointments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Payment item appointments</h1>
    <%= link_to "New payment item appointment", new_payment_item_appointment_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="payment_item_appointments" class="min-w-full">
    <% @payment_item_appointments.each do |payment_item_appointment| %>
      <%= render payment_item_appointment %>
      <p>
        <%= link_to "Show this payment item appointment", payment_item_appointment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
