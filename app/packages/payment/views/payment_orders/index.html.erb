<div class="w-full">
  <% content_for :title, "Payment orders" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Payment orders</h1>
    <%= link_to "New payment order", new_payment_order_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="payment_orders" class="min-w-full">
  </div>
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
<%= content_data(@payment_orders, only: [:id, :amount, :status, :created_at, :updated_at], methods: [:customer_name]).html_safe %>