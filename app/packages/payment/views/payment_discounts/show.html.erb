<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <%= render @payment_discount %>

    <%= link_to "Edit this payment discount", edit_payment_discount_path(@payment_discount), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to payment discounts", payment_discounts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this payment discount", @payment_discount, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
