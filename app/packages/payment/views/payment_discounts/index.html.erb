<div class="w-full">
  <% content_for :title, "Payment discounts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Payment discounts</h1>
    <%= link_to "New payment discount", new_payment_discount_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="payment_discounts" class="min-w-full">
    <% @payment_discounts.each do |payment_discount| %>
      <%= render payment_discount %>
      <p>
        <%= link_to "Show this payment discount", payment_discount, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
