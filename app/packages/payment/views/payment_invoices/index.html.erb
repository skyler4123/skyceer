<div class="w-full">
  <% content_for :title, "Payment invoices" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Payment invoices</h1>
    <%= link_to "New payment invoice", new_payment_invoice_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="payment_invoices" class="min-w-full">
    <% @payment_invoices.each do |payment_invoice| %>
      <%= render payment_invoice %>
      <p>
        <%= link_to "Show this payment invoice", payment_invoice, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
