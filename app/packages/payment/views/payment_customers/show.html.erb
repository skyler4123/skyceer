<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <%= render @payment_customer %>

    <%= link_to "Edit this payment customer", edit_payment_customer_path(@payment_customer), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to payment customers", payment_customers_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this payment customer", @payment_customer, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
