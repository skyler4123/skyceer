<div class="w-full">
  <% content_for :title, "Payment customers" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Payment customers</h1>
    <%= link_to "New payment customer", new_payment_customer_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="payment_customers" class="min-w-full">
    <% @payment_customers.each do |payment_customer| %>
      <%= render payment_customer %>
      <p>
        <%= link_to "Show this payment customer", payment_customer, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
