<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @payment_method_appointment %>

    <%= link_to "Edit this payment method appointment", edit_payment_method_appointment_path(@payment_method_appointment), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to payment method appointments", payment_method_appointments_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
