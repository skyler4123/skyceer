<div class="w-full">
  <% content_for :title, "Payment method appointments" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Payment method appointments</h1>
    <%= link_to "New payment method appointment", new_payment_method_appointment_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="payment_method_appointments" class="min-w-full">
    <% @payment_method_appointments.each do |payment_method_appointment| %>
      <%= render payment_method_appointment %>
      <p>
        <%= link_to "Show this payment method appointment", payment_method_appointment, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
