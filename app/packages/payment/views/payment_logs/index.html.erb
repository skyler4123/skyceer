<div class="w-full">
  <% content_for :title, "Payment logs" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Payment logs</h1>
    <%= link_to "New payment log", new_payment_log_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="payment_logs" class="min-w-full">
    <% @payment_logs.each do |payment_log| %>
      <%= render payment_log %>
      <p>
        <%= link_to "Show this payment log", payment_log, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
