<div class="w-full">
  <% content_for :title, "Payment methods" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Payment methods</h1>
    <%= link_to "New payment method", new_payment_method_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="payment_methods" class="min-w-full">
    <% @payment_methods.each do |payment_method| %>
      <%= render payment_method %>
      <p>
        <%= link_to "Show this payment method", payment_method, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
