<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <%= render @payment_method %>

    <%= link_to "Edit this payment method", edit_payment_method_path(@payment_method), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to payment methods", payment_methods_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this payment method", @payment_method, method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
