<div id="<%= dom_id car_brand %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= car_brand.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this car brand", car_brand, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this car brand", edit_car_brand_path(car_brand), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
