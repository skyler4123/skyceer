<%= form_with(model: map_point, class: "contents") do |form| %>
  <% if map_point.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(map_point.errors.count, "error") %> prohibited this map_point from being saved:</h2>

      <ul>
        <% map_point.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :coordinates %>
    <%= form.text_field :coordinates, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :mapable_id %>
    <%= form.text_field :mapable_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :map_user_id %>
    <%= form.text_field :map_user_id, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :verified %>
    <%= form.check_box :verified, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="my-5">
    <%= form.label :expired %>
    <%= form.check_box :expired, class: "block mt-2 h-5 w-5" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
