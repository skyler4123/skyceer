<div id="<%= dom_id map_point %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Coordinates:</strong>
    <%= map_point.coordinates %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Mapable:</strong>
    <%= map_point.mapable_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Map user:</strong>
    <%= map_point.map_user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Verified:</strong>
    <%= map_point.verified %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Expired:</strong>
    <%= map_point.expired %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this map point", map_point, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this map point", edit_map_point_path(map_point), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
