<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">New estate house</h1>

  <%= form_with(model: @estate_house, class: "contents", data: {"#{view_controller(__FILE__)}-target" => "newForm"}) do |form| %>
    <% if @estate_house.errors.any? %>
      <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
        <h2><%= pluralize(@estate_house.errors.count, "error") %> prohibited this @estate_house from being saved:</h2>

        <ul>
          <% @estate_house.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="my-5">
      <%= form.label :name %>
      <%= form.text_field :name, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :price_cents %>
      <%= form.number_field :price_cents, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :images %>
      <% @estate_house.images.each do |image| %>
        <%= form.hidden_field :images, multiple: true, value: image.signed_id %>
      <% end %>
      <%= form.file_field :images, multiple: true, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <%= form.fields_for(:address, class: "contents") do |address_form| %>
      <div class="my-5">
        <%= address_form.label :unit_number %>
        <%= address_form.text_field :unit_number, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= address_form.label :street_number %>
        <%= address_form.text_field :street_number, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= address_form.label :address_line_1 %>
        <%= address_form.text_field :address_line_1, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= address_form.label :address_line_2 %>
        <%= address_form.text_field :address_line_2, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= address_form.label :city %>
        <%= address_form.text_field :city, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= address_form.label :country_code %>
        <%= address_form.text_field :country_code, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= address_form.label :postal_code %>
        <%= address_form.text_field :postal_code, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
      
      <div class="my-5">
        <%= address_form.label :latitude %>
        <%= address_form.text_field :latitude, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>

      <div class="my-5">
        <%= address_form.label :longitude %>
        <%= address_form.text_field :longitude, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
      </div>
    <% end %>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>

  <% end %>
  <%= link_to "Back to estate houses", estate_houses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
<div data-<%= view_controller(__FILE__) %>-target="newMap"></div>
