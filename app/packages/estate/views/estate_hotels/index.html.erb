<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Estate hotels" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Estate hotels</h1>
    <%= link_to "New rs hotel", new_estate_hotel_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div data-<%= view_controller(__FILE__) %>-target="map"></div>
  <div id="estate_hotels" class="min-w-full">
    <% @estate_hotels.each do |estate_hotel| %>
      <%= render estate_hotel %>
      <p>
        <%= link_to "Show this rs hotel", estate_hotel, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
