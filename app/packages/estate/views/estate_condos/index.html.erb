<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Estate condos" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Estate condos</h1>
    <%= link_to "New rs condo", new_estate_condo_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div data-<%= view_controller(__FILE__) %>-target="search"></div>
  <div data-<%= view_controller(__FILE__) %>-target="map"></div>
  <div id="estate_condos" class="min-w-full">
    <% @estate_condos.each do |estate_condo| %>
      <%= render estate_condo %>
      <p>
        <%= link_to "Show this rs condo", estate_condo, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
