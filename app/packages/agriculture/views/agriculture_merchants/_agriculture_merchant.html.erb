<div id="<%= dom_id agriculture_merchant %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Agriculture user:</strong>
    <%= agriculture_merchant.agriculture_user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this agriculture merchant", agriculture_merchant, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this agriculture merchant", edit_agriculture_merchant_path(agriculture_merchant), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
