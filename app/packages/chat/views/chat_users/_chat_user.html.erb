<div id="<%= dom_id chat_user %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= chat_user.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this chat user", chat_user, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this chat user', edit_chat_user_path(chat_user), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
