<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <%= render partial: 'chat_conversation', locals: { chat_conversation: @chat_conversation, chat_messages: @chat_conversation.chat_messages } %>

    <%= link_to "Edit this chat_conversation", edit_chat_conversation_path(@chat_conversation), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this chat_conversation", chat_conversation_path(@chat_conversation), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to chat_conversations", chat_conversations_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>