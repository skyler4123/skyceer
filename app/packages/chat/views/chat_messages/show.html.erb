<div class="mx-auto w-4/5 flex">
  <div class="mx-auto">
    <%= render partial: 'chat_message', locals: { chat_message: @chat_message } %>

    <%= link_to "Edit this chat_message", edit_chat_message_path(@chat_message), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this chat_message", chat_message_path(@chat_message), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to chat_messages", chat_messages_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
