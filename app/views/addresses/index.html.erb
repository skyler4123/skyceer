<div class="w-full">
  <% content_for :title, "Addresses" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-2xl">Addresses</h1>
    <%= link_to "New address", new_address_path, class: "rounded-lg py-3 px-5 bg-slate-800 text-white block font-medium" %>
  </div>

  <div id="addresses" class="min-w-full">
    <% @addresses.each do |address| %>
      <%= render address %>
      <p>
        <%= link_to "Show this address", address, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
