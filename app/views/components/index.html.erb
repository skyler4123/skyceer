<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Components</h1>
  </div>

  <div id="components" class="flex flex-col justify-center items-center min-w-full">
    <%= render(ButtonComponent.new(label: "Button")) do |c| %>
      <% c.with_append do %>
        <%= render(IconComponent.new) %>
      <% end %>
    <% end %>
    <%= render(ButtonComponent.new) %>
    <%= render(LinkComponent.new) do %>
      <%= render(IconComponent.new) %>
    <% end %>
    <%= render(LinkComponent.new(label: "Skyler")) do |c| %>
      <% c.with_append do %>
        <%= render(IconComponent.new) %>
      <% end %>
    <% end %>
    <%= render(Hr::TextComponent.new) %>
  </div>
</div>
