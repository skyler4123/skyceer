<div id="<%= dom_id demo %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= demo.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this demo", demo, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this demo', edit_demo_path(demo), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
